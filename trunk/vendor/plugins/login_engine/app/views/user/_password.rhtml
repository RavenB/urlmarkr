<div class="user_password">
  <table>
    <%= form_input :password_field, "Password", "password", :size => 20 %>
    <%= form_input :password_field, "Password Confirmation", "password_confirmation", :size => 20 %>
    <% if submit %>
      <%= form_input :submit_button, 'Change password' %>
    <% end %>
  </table>
</div>                                                                          