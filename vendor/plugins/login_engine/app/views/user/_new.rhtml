
<tr class="two_columns">

          <td><label>First Name:</label></td>
          <td><input id="user_firstname" name="user[firstname]" size="20" type="text" /></td>
        </tr>

            <tr class="two_columns">
          <td><label>Last Name:</label></td>
          <td><input id="user_lastname" name="user[lastname]" size="20" type="text" /></td>
        </tr>

            <tr class="two_columns">
          <td><label>Login ID:</label></td>
          <td><input id="user_login" name="user[login]" size="20" type="text" value="" /></td>
        </tr>
<br/>
            <tr class="two_columns">
          <td><label>Email:</label></td>
          <td><input id="user_email" name="user[email]" size="20" type="text" value="" /></td>

        </tr>
    <% if submit %>
      <%= form_input :submit_button, (user.new_record? ? 'Signup' : 'Change Settings'), :class => 'two_columns' %>
    <% end %>

