<div title="<%= title_helper %>" class="form">

  <%= error_messages_for 'user' %>
	 <% if @flash['error'] %>
      <div id="SystemError"><%= @flash['error'] %></div>
      <% elsif @flash['status'] %>
      <div id="SystemStatus">&nbsp;&nbsp;<%= @flash['status'] %></div>
      <% end %>
  <div class="form-padding">
    <p>&nbsp;&nbsp;Enter your new password in the fields below and click 'Change Password'</p>

    <%= start_form_tag :action => 'change_password' %>
      <%= render_partial 'password', :user => @user, :submit => false %>
      <div class="button-bar">
        <%= submit_tag 'Change password' %>
      </div>
    <%= end_form_tag %>
  </div>
</div>